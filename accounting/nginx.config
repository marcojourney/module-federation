server {
    listen 80;
    server_name example.com;
    root /path/to/your/project/dist;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Serve specific versioned builds
    location /v1.0.1/ {
        alias /path/to/your/project/dist/1.0.1/;
        try_files $uri $uri/ /index.html;
    }

    location /v1.0.2/ {
        alias /path/to/your/project/dist/1.0.2/;
        try_files $uri $uri/ /index.html;
    }

    location /v1.0.3/ {
        alias /path/to/your/project/dist/1.0.3/;
        try_files $uri $uri/ /index.html;
    }

    # Other configuration...
}

server {
    listen 80;
    server_name example.com;
    root /path/to/your/project/dist/current;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Other configuration...
}

# Navigate to the dist directory
cd /path/to/your/project/dist

# Update the symbolic link to point to the new version
ln -sfn 1.0.2 current


deploy.sh
#!/bin/bash

VERSION=$1

if [ -z "$VERSION" ]; then
  echo "Usage: $0 <version>"
  exit 1
fi

# Navigate to the dist directory
cd /path/to/your/project/dist

# Update the symbolic link to point to the new version
ln -sfn $VERSION current

# Reload Nginx to apply the changes
sudo systemctl reload nginx

echo "Deployment of version $VERSION completed."

Make the script executable:
chmod +x deploy.sh

Deploy a new version by running the script with the version number:
./deploy.sh 1.0.2

